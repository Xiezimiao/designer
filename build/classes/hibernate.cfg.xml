<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory name="HibernateSessionFactory">
		<property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
		<property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;DatabaseName=designer</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password">sa</property>
		<property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
		
		<mapping resource="cn/edu/zjut/po/Designer.hbm.xml" />
		<mapping resource="cn/edu/zjut/po/Example.hbm.xml" />
		<mapping resource="cn/edu/zjut/po/Comments.hbm.xml" />
		<mapping resource="cn/edu/zjut/po/Employer.hbm.xml" />
		<mapping resource="cn/edu/zjut/po/ExamplePanorama.hbm.xml" />
		<mapping resource="cn/edu/zjut/po/ExamplePicture.hbm.xml" />
		<mapping resource="cn/edu/zjut/po/Needs.hbm.xml" />
		<mapping resource="cn/edu/zjut/po/Orderr.hbm.xml" />
	</session-factory>
</hibernate-configuration>